

script(type="text/x-template")#skills-list

        ul.user-skills

            li.skills__list(v-for="category in skills" :key="category.title")
                skills-row(
                    :category="category"
                )

script(type="text/x-template")#skills-row
    .skills-row
        .skills__name {{category.title}}
        ul.skills__list
            li.skills__item(v-for="skill in category.skills" :key="skill.id")
                skill(
                    :skill="skill"
                )

script(type="text/x-template")#skill
    .skills__level
        svg(viewBox="0 0 100 100").skill__shape
            linearGradient(id="gr" x1="0%" y1="0%" x2="100%" y2="0")
                stop(offset="0%" stop-color="#5500f2")
                stop(offset="100%" stop-color="#05e4ef")
            circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
            text(x="50%" y="50%" text-anchor='middle').item__name {{skill.title}}
            circle(cx="50" cy="50" r="40" ref="circle" stroke="url(#gr)" transform='rotate(180 50 50)').skill__value


