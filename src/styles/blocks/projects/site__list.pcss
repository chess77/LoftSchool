.slider-box {
    display: flex;
    position: absolute;
    z-index: 2;
    justify-content: flex-end;
    width: 685px;
    margin-top: 210px;
}

.site__list {
    display: flex;
}

.site__item {
    &.site__item--active {
        & .site__image {
            border: 1px solid $main-color;
        }

        & .hover__block {
            background-color: rgba($main-color, 0.6);
        }
    }
}

.hover__block {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
}

.site__image-box {
    width: 178px;
    height: 100px;
    position: relative;
}

.site__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
}

.vectors__container {
    display: flex;
    flex-direction: column;
    width: 50px;
    height: 100px;
}

.vectors__btn {
    background-color: #353e4e;
    height: 100%;
    color: $light-text-color;
    outline: none;

    &:hover {
        background-color: $main-color;
        color: $light-text-color;
    }

    &.vectors__btn--not-go {
        color: #727883;

        &:hover {
            background-color: $main-color;
            color: $light-text-color;
        }
    }
}