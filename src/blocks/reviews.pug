section.reviews
    .container.container__reviews
        .rewievs____reviews
            .reviews__content1
                h2.reviews__title Что обо мне говорят


                .sliders-btn__box
                    button.review-slider__btn.review-slider__btn--back(id="backBtn" @click="previous" )
                        +icon('arrow-down', 'btn__icon')
                    button.review-slider__btn.review-slider__btn--next(id="nextBtn" @click="next" )
                        +icon('arrow-down', 'btn__icon')

                flickity(ref="flickity" :options="flickityOptions").reviews__box

                    .reviews__item(v-for="item in reviews" :key="item.name")
                        .reviews__desc__quote
                            +icon('quote', 'reviews__quote')
                            .reviews__desc {{item.text}}

                        .author__box
                            .author__photo
                                img(:src="item.photo").author__image
                            .author__info
                                .author__name {{item.name}}
                                .author__position {{item.position}}

        include /reviews-els/reviews-form.pug
